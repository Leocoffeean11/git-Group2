           <script> //判斷式
            
            var cal=1000
            
           // 第一個介面猜測的卡路里數
           
           function lunchbox(){
           }
           if (cal<=500){
           lunchbox('簡單健康餐');
           document.write('<div style="text-align:center;"><h2 class="p">簡單健康餐</h2><img src="https://github.com/joy1213/01lun/blob/main/01%E7%B0%A1%E5%96%AE.png?raw=true"  class="imgsize">')
           //卡路里數小於等於 500 時，呼叫帶入'簡單健康餐'作為參數的 lunchbox 函式
           } else if (cal<=800 && cal>500){
           lunchbox('標準健康餐')
           document.write('<div style="text-align:center;"><h2 class="p">標準健康餐</h2><><img src="https://github.com/joy1213/01lun/blob/main/02%E5%81%A5%E5%BA%B7.png?raw=true"  class="imgsize">')
           //飽足程度小於等於 1000 且大於 500時，呼叫帶入'標準健康餐'作為參數的 lunchbox 函式
           } else{
           document.write('<div style="text-align:center;"><h2 class="p">豐盛健康餐</h2><img src="https://github.com/joy1213/01lun/blob/main/03%E8%B1%90%E7%9B%9B.png?raw=true"  class="imgsize">')
           
